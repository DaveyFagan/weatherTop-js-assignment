{{> menu id="update"}}
<div class="ui center aligned middle aligned two column grid segment">
    <div class="column">
        <form class="ui stacked segment form" action="/update" method="POST">
            <h3 class="ui header">Edit Profile</h3>
            <div class="two fields">
        <div class="field">
                    <label>First Name</label>
                    <input placeholder="{{user.firstName}}" type="text" name="firstname" value = "{{user.firstName}}">
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <input placeholder="{{user.lastName}}" type="text" name="lastname" value = "{{user.lastName}}">
                </div>
            </div>
            <div class="field">
                <label>Email</label>
                <input placeholder="{{user.email}}" type="text" name="email" value="{{user.email}}">
            </div>
            <div class="field">
                <label>Password</label>
                <input type="password" name="password" value = "{{user.password}}">
            </div>
            <button class="ui black submit button">Submit</button>
        </form>
    </div>
    <div class="column">
        <img class="ui image" src="https://cdn.glitch.com/c4ca02c0-5bf7-4841-a6e5-d629780f4604%2Fsnow3.png?v=1631019651432">
    </div>
</div>
