
<div class="ui inverted five cards">
  {{>card title = station.name icon = "marker" colour = "violet"}}
  {{#each station.readings}}{{#if @last}}
  {{>card title = "Weather" valueC = weatherCode icon = latestIcon colour = "red"}}
  {{>card title = "Temp" valueA = temperature c = " C" valueB = tempF f = " F" icon = "temperature low" colour = "blue"}}
  {{>card title = "Wind Speed" valueA = beaufort  bft = " bft" valueB = windCompass str = "Feels like: " valueC = chill icon = "wind" colour = "green"}}
  {{>card title = "Pressure" valueA = pressure hpa = "hPa" icon = "centos" colour = "orange"}}
  {{/if}}{{/each}}
</div>
